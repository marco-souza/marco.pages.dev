{
  "name": "@marco-souza/marco.pages.dev",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "tests": "vitest",
    "build": "vite build --mode client && vite build",
    "e2e": "playwright test",
    "fmt": "biome format --fix",
    "lint": "biome lint --fix --unsafe",
    "encrypt": "gpg -c .env",
    "decrypt": "gpg -d .env.gpg > .env && bun run w:typegen",
    "postinstall": "lefthook install && bun run w:typegen",
    "w": "wrangler",
    "w:secret": "wrangler pages secret",
    "w:typegen": "[ -f .env ] && cp .env .dev.vars; wrangler types",
    "preview": "wrangler pages dev",
    "deploy": "bun run build && wrangler pages deploy"
  },
  "dependencies": {
    "hono": "^4.7.5",
    "honox": "^0.1.38",
    "htmx.org": "2.0.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@hono/vite-build": "^1.4.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@hono/vite-dev-server": "^0.18.3",
    "@playwright/test": "^1.51.1",
    "@tailwindcss/vite": "^4.0.17",
    "@types/node": "^22.13.13",
    "daisyui": "^5.0.9",
    "lefthook": "^1.11.5",
    "tailwindcss": "^4.0.17",
    "typed-htmx": "^0.3.1",
    "vite": "^6.2.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.9",
    "wrangler": "^4.5.0"
  },
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}
