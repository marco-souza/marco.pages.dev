{
  "name": "@marco-souza/marco.pages.dev",
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "tests": "vitest",
    "build": "vite build --mode client && vite build && echo _worker.js >> dist/.assetsignore",
    "e2e": "playwright test",
    "fmt": "biome format --fix",
    "lint": "biome lint --fix --unsafe",
    "encrypt": "gpg -c .env",
    "decrypt": "gpg -d .env.gpg > .env && bun run w:typegen",
    "postinstall": "lefthook install && bun run w:typegen",
    "w": "wrangler",
    "w:secret": "wrangler secret",
    "w:typegen": "[ -f .env ] && cp .env .dev.vars; wrangler types",
    "preview": "wrangler dev",
    "deploy": "bun run build && wrangler deploy"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.2",
    "@m3o/auth": "npm:@jsr/m3o__auth",
    "hono": "^4.8.10",
    "honox": "^0.1.43",
    "htmx.org": "^2.0.6",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@hono/vite-build": "^1.6.2",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@hono/vite-dev-server": "^0.20.0",
    "@playwright/test": "^1.54.1",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^24.1.0",
    "daisyui": "^5.0.50",
    "lefthook": "^1.12.2",
    "tailwindcss": "^4.1.11",
    "typed-htmx": "^0.3.1",
    "vite": "^7.0.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "wrangler": "^4.26.1"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@tailwindcss/oxide",
    "esbuild",
    "lefthook",
    "sharp",
    "workerd"
  ],
  "volta": {
    "node": "22.17.1"
  }
}
